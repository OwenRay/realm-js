    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "/Users/franck.franck/.nvm/versions/node/v10.19.0/bin/node",
            "args": [
                "--expose_gc",
                "${workspaceRoot}/tests/node_modules/jasmine/bin/jasmine.js",
                "spec/unit_tests.js",
                "--filter=testR2"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/tests",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "type": "lldb",
            "name": "LLDB Debug",
            "request": "launch",
            "program": "/Users/franck.franck/.nvm/versions/node/v10.19.0/bin/node",
            "args": [
                "--expose_gc",
                "${workspaceRoot}/tests/node_modules/jasmine/bin/jasmine.js",
                "spec/unit_tests.js",
                "--filter=testR2"
            ],
            "cwd": "${workspaceRoot}/tests",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Node Unit Tests (rebuild)",
            "preLaunchTask": "rebuild-node-tests",
            "cwd": "${workspaceRoot}/tests",
            "program": "${workspaceRoot}/tests/node_modules/jasmine/bin/jasmine.js",
            "runtimeArgs": ["--expose_gc"],
            "args": [
                "spec/unit_tests.js",
                "--filter=testR2"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Node Unit Tests",
            "cwd": "${workspaceRoot}/tests",
            "program": "${workspaceRoot}/tests/node_modules/jasmine/bin/jasmine.js",
            "runtimeArgs": ["--expose_gc"],
            "args": [
                "spec/unit_tests.js",
                "--filter=testAnalyticsSubmission"
            ],
            "env": {"PATH": "/Users/franck.franck/.nvm/versions/node/v10.19.0/bin/:/usr/sbin"}
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Start Stitch in Docker",
            "cwd": "${workspaceRoot}/scripts",
            "preLaunchTask": "start_stitch",
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Port",
            "protocol": "inspector",
            "address": "localhost",
            "port": 5858
        }
    ],
    "compounds": [
        {
            "name": "Start Server + Debug",
            "configurations": [
                "Start Stitch in Docker",
                "Debug Node Unit Tests (rebuild)"
            ]
        },
        {
            "name": "Debug GDB + NodeJS",
            "configurations": [
                "(gdb) Launch",
                "Attach to Port"
            ]
        }
    ]
}